
<h1> Edit {{book.title}} </h1>

<section>
  <form action="/books/{{book.id}}/editbook" method="POST">
    <label for="title">Title</label>
    <input name='title' type='text' id='title' value='{{book.title}}'>

    <label for="genre">Genre</label>
    <input name='genre' type='text' id='genre' value='{{book.genre}}'>

    <label for="description">Description</label>
    <textarea rows='10' cols='30' name='description' id='description'>{{book.description}}</textarea>

    <label for="bookcover">Bookcover</label>
    <input name='image' type='url' id='bookcover' value='{{book.image}}'>

    <input type="submit" value="Submit">
  </form>
</section>
