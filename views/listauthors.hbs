<a href="/authors/addauthors"><button class="waves-effect waves-light btn" type="button" name="button">Add Author</button>
</a>
{{#each author}}
<div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">{{this.title}}</span>
              <p>
                {{this.genre}}
                {{this.description}}
                <img class="bookcover" src="{{this.image}}">
                </p>
            </div>
            <div class="card-action">
              <a href="/books/{{this.id}}">Author Details</a>
              <a href="/books/{{this.id}}/deletebook">Delete Delete</a>
              <a href="/books/{{this.id}}/editbook">Edit Author</a>
            </div>
          </div>
        </div>
      </div>
  {{/each}}
